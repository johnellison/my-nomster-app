<div class="m-place-box col-xs-10 col-xs-offset-1">
  <h1><%= @place.name %></h1>
  <h3 class="subheader"><%= @place.address %></h3>
  <p><%= @place.description %></p>

  <!-- Load map if geocoder coordinates are present -->
  <% if @place.latitude.present? && @place.longitude.present? %>
  <!-- Render Google Map -->
  <div id="map-canvas">
    
  </div>
  <!-- Google Maps API JS -->
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
  <script>
  function initialize() {
    var myLatlng = new google.maps.LatLng(<%= @place.latitude %>, <%= @place.longitude %>);
    var mapOptions = {
      zoom: 14,
      center: myLatlng
    }
    var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

    var marker = new google.maps.Marker({
        position: myLatlng,
        map: map,
        title: 'Hello World!'
    });
  }

  google.maps.event.addDomListener(window, 'load', initialize);

  </script>
  <% end %>
  
  <%= simple_form_for @comment, :url => '#' do |f| %>
    <%= f.input :message %>
    <%= f.input :rating %>
    <%= f.submit 'Comment', :class => 'btn btn-primary' %>
  <% end %>

  <div class="pull-right">
    <% if current_user && current_user == @place.user %>
      <%= link_to 'Edit', edit_place_path(@place), :class => 'btn btn-primary' %>
      <%= link_to 'Delete', place_path(@place), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this place?'}, :class => 'btn btn-danger' %>
    <% end %>
  </div>

</div>

